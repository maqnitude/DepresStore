<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>DepresStore - @ViewData["Title"]</title>
  <link rel="icon" type="image/x-icon" href="~/favicon.ico">
  <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css">
  <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css">

  <!-- This is needed for CSS isolation -->
  <link rel="stylesheet" href="~/DepresStore.Web.styles.css">
</head>

<body>
  <header>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container">
        <a class="navbar-brand text-body-emphasis fw-bold"
           asp-area="" asp-controller="Home" asp-action="Index">
          DepresStore
        </a>
        <button class="navbar-toggler" type="button"
                data-bs-toggle="collapse" data-bs-target="#dsNavbar"
                aria-controls="dsNavbar" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="dsNavbar">
          <div class="row w-100 justify-content-between">
            <!-- Left -->
            <div class="col-auto">
              <ul class="navbar-nav">
                <li class="nav-item">
                  <vc:catalog-explorer></vc:catalog-explorer>
                </li>
              </ul>
            </div>
            <!-- Center -->
            <!-- TODO: Make a view component for this -->
            <div class="col">
              <div class="dropdown">
                <form role="search">
                  <div class="input-group">
                    <input class="form-control" type="search" id="searchInput"
                           placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-secondary" type="submit">
                      <i class="bi bi-search"></i>
                    </button>
                  </div>
                </form>
                <button class="d-none" type="button" id="searchDropdownToggle"
                        data-bs-toggle="dropdown" aria-expanded="false">
                </button>
                <ul class="dropdown-menu w-100">
                  <li class="d-flex justify-content-center">
                    <span>Not found.</span>
                  </li>
                </ul>
              </div>
            </div>
            <!-- Right -->
            <!-- TODO: Make a view component for this -->
            <div class="col-auto d-flex justify-content-end">
              <div class="d-flex flex-row gap-2">
                <div class="dropdown">
                  <button class="btn dropdown-toggle" type="button"
                          data-bs-toggle="dropdown">
                    <i class="bi bi-moon-stars-fill"></i>
                  </button>
                  <ul class="dropdown-menu dropdown-menu-end">
                    <li>
                      <button class="dropdown-item">
                        <i class="bi bi-brightness-high-fill"></i>
                        Light
                      </button>
                      <button class="dropdown-item">
                        <i class="bi bi-moon-stars-fill"></i>
                        Dark
                      </button>
                      <button class="dropdown-item">
                        <i class="bi bi-circle-half"></i>
                        System
                      </button>
                    </li>
                  </ul>
                </div>
                @if (Context.User.Identity?.IsAuthenticated == true)
                {
                  <!-- Sign Out button triggers modal -->
                  <button type="button" class="btn btn-primary"
                          data-bs-toggle="modal" data-bs-target="#logoutConfirmModal">
                    Sign Out
                  </button>
                }
                else
                {
                  <a class="btn btn-primary" asp-controller="Authentication" asp-action="LogIn">Sign In</a>
                }
              </div>
            </div>
          </div>
        </div>
      </div>
    </nav>
  </header>

  <div class="container">
    <main role="main">
      @RenderBody()
    </main>
  </div>

  <footer></footer>

  <!-- Logout Confirmation Modal -->
  <div class="modal fade" tabindex="-1" id="logoutConfirmModal"
       aria-labelledby="logoutConfirmModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="logoutConfirmModalLabel">Confirm Sign Out</h5>
          <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          Are you sure you want to sign out?
        </div>
        <div class="modal-footer">
          <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Cancel</button>
          <form class="d-inline" asp-controller="Authentication" asp-action="LogOut" method="post">
            <button class="btn btn-danger" type="submit">Confirm</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      var searchInput = document.getElementById("searchInput");
      var searchDropdownToggle = document.getElementById("searchDropdownToggle");

      // Dropdown is not dropdown-menu
      var searchDropdown = new bootstrap.Dropdown(searchDropdownToggle, {
        autoClose: false
      });

      searchInput.addEventListener("focus", () => {
        searchDropdown.show();
      })

      searchInput.addEventListener("blur", () => {
        searchDropdown.hide();
      });
    });
  </script>
  @await RenderSectionAsync("Scripts", false)
</body>

</html>